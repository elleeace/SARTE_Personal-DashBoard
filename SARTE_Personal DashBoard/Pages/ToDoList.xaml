<Page x:Class="SARTE_Personal_DashBoard.Pages.ToDoList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SARTE_Personal_DashBoard.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToDoList">

    <Grid Background="#FFF1EDE3">
        <ListBox x:Name="lbTasks" Margin="40,96,42,22" BorderThickness="3,3,3,3" BorderBrush="#FFA35C29" HorizontalContentAlignment="Center" FontFamily="Ink Free" FontSize="16">
            <!-- Items will be dynamically added here -->
        </ListBox>
        <Label Content="My Tasks" HorizontalAlignment="Left" Margin="40,41,0,0" VerticalAlignment="Top" Width="180" Height="40" HorizontalContentAlignment="Center" FontSize="30" Foreground="#FFA35C29" FontFamily="Bradley Hand ITC" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <Button x:Name="btnAddTask" Content="Add Task" HorizontalAlignment="Center" Margin="0,51,0,0" VerticalAlignment="Top" Width="110" Height="30" Click="btnAddTask_Click" BorderBrush="#FFA35C29" FontFamily="Tw Cen MT"/>
        <Button x:Name="btnEditTask" Content="Edit Task" HorizontalAlignment="Left" Margin="470,51,0,0" VerticalAlignment="Top" Width="121" Height="30" BorderBrush="#FFA35C29" FontFamily="Tw Cen MT" Click="btnEditTask_Click"/>
        <Button x:Name="btnRemoveTask" Content="Remove Task" HorizontalAlignment="Left" Margin="599,52,0,0" VerticalAlignment="Top" Width="119" Height="30" BorderBrush="#FFA35C29" FontFamily="Tw Cen MT" Click="btnRemoveTask_Click"/>
    </Grid>
</Page>
