<Page x:Class="SARTE_Personal_DashBoard.Pages.Notes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SARTE_Personal_DashBoard.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Notes">

    <Grid Background="#FFF1EDE3">
        <Label Content="My Notes" HorizontalAlignment="Left" Margin="50,47,0,0" VerticalAlignment="Top" Width="142" Height="48" HorizontalContentAlignment="Center" FontSize="30" Foreground="#FFA35C29" FontFamily="Bradley Hand ITC" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <ListBox x:Name="lbNotes" Margin="50,100,460,42" DisplayMemberPath="Title" SelectionChanged="lbNotes_SelectionChanged"/>
        <Button x:Name="btnAddNote" Content="Add Note" HorizontalAlignment="Left" Margin="215,47,0,0" VerticalAlignment="Top" Width="107" Height="38" BorderBrush="{x:Null}" Background="#FFD2B499" Click="btnAddNote_Click"/>

        <Frame x:Name="NotesFrame" Margin="350,100,50,50" NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
