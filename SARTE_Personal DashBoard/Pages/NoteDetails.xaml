<Page x:Class="SARTE_Personal_DashBoard.Pages.NoteDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SARTE_Personal_DashBoard.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="NoteDetails">

    <Grid Background="#FFF0E2C8">
        <TextBox x:Name="tbNoteTitleInput" Margin="18,27,22,393" FontSize="20" FontFamily="Ink Free" Foreground="#FF5A3009" Background="{x:Null}" FontWeight="Bold" IsEnabled="False" />
        <TextBox x:Name="tbNoteDateInput" Margin="18,63,22,358" FontSize="15" FontFamily="Ink Free" Foreground="#FF5A3009" Background="{x:Null}" IsEnabled="False" />
        <TextBox x:Name="tbNoteContent" Margin="18,97,18,97" TextWrapping="Wrap" FontSize="15" Foreground="#FF5A3009" Background="#FFFEFDEC" IsEnabled="False" />

        <Button x:Name="btnEditNote" Content="Edit Note" HorizontalAlignment="Left" Margin="18,386,0,0" VerticalAlignment="Top" Width="179" Height="40" BorderBrush="{x:Null}" Background="#FFD2B499" Click="btnSaveNote_Click"/>
          </Grid>
</Page>
